#exec_always feh --bg-scale /home/havel/Im치genes/imagenes_no_borrar/1378890.png
exec_always --no-startup-id bash -c "while [ -z \"$(pgrep X)\" ]; do sleep 0.5; done; sleep 1 && feh --bg-scale /home/havel/Im치genes/imagenes_no_borrar/1378890.png"


