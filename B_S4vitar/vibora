#!/usr/bin/env python3
import random
import time

# Definición de variables
ancho = 20
alto = 10
viborita = [(ancho // 2, alto // 2)]
fruta = (random.randint(1, ancho), random.randint(1, alto))
direccion = "derecha"
puntuacion = 0

# Función para imprimir el tablero
def imprimir_tablero():
    for y in range(1, alto + 1):
        for x in range(1, ancho + 1):
            if (x, y) in viborita:
                print("O", end=" ")
            elif (x, y) == fruta:
                print("F", end=" ")
            else:
                print(".", end=" ")
        print()

# Función para mover la serpiente
def mover_serpiente():
    global direccion
    x, y = viborita[0]
    if direccion == 'w':
        y -= 1
    elif direccion == 's':
        y += 1
    elif direccion == 'a':
        x -= 1
    elif direccion == 'd':
        x += 1

    viborita.insert(0, (x, y))
    if (x, y) == fruta:
        generar_fruta()
        global puntuacion
        puntuacion += 1
    else:
        viborita.pop()

# Función para generar una nueva fruta
def generar_fruta():
    global fruta
    fruta = (random.randint(1, ancho), random.randint(1, alto))
    while fruta in viborita:
        fruta = (random.randint(1, ancho), random.randint(1, alto))

# Función principal del juego
def jugar():
    while True:
        imprimir_tablero()
        print("Puntuación:", puntuacion)
        time.sleep(0.1)  # Añadir un pequeño retraso para que el juego no se ejecute demasiado rápido
        tecla = input("Presiona W, A, S o D y luego Enter para mover la serpiente: ").lower()
        if tecla in ['w', 'a', 's', 'd']:
            global direccion
            direccion = tecla
        mover_serpiente()

# Iniciar el juego
jugar()

